---
import { PROFILE_INFO } from "@/lib/constants/profile";
import { markdownToHtml } from "@/lib/markdown";
import AboutToggle from "@/components/sections/about-toggle";

const tldrHtml = await markdownToHtml(PROFILE_INFO.aboutTLDR || "");
const fullHtml = await markdownToHtml(PROFILE_INFO.aboutFull || "");
---

<AboutToggle client:load tldrHtml={tldrHtml} fullHtml={fullHtml} />
