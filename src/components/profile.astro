  <a href={`mailto:${PROFILE_INFO.email}`} class="underline underline-offset-4">
    get in touch
  </a>
</div>

}

<Box>
  <BoxContent className="space-y-3">
    <span class="flex items-center justify-start gap-2">
      <Briefcase className="size-4" />
      Take a look at my
      <a
        href="#"
        target="_blank"
        class="underline underline-offset-4"
      >
        Resume
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <GithubIcon className="size-4" />
      I ship code on
      <a
        href="https://github.com/Frynnn-69"
        class="underline underline-offset-4"
        target="_blank"
      >
        GitHub
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <LinkedinIcon className="size-4" />
      Let's connect on
      <a
        href="https://www.linkedin.com/in/firyan-fatih-fadilah/"
        class="underline underline-offset-4"
        target="_blank"
      >
        LinkedIn
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <HuggingFaceIcon className="size-4" />
      Sometimes I mess around on 
      <a
        href="https://huggingface.co/"
        target="_blank"
        class="underline underline-offset-4"
      >
        Hugging Face
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <Clapperboard className="size-4" />
      <span>
        Like watching movies/series? I do&nbsp;
        <a
          href="https://letterboxd.com/"
          target="_blank"
          class="underline underline-offset-4"
        >Letterboxd</a>/<a
          href="https://tvtime.com/"
          target="_blank"
          class="underline underline-offset-4"
        >TvTime</a>
      </span>
    </span>
  </BoxContent>
</Box>
