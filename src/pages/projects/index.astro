---
import Pattern from "@/components/ui/pattern.astro";
import PageLayout from "@/layouts/page-layout.astro";

import Box from "@/components/box/index.astro";
import BoxHeader from "@/components/box/header.astro";
import BoxTitle from "@/components/box/title.astro";
import { getCollection } from "astro:content";
import ProjectItem from "@/components/sections/projects/project-item.astro";
import MaintenanceNotice from "@/components/ui/maintenance-notice.astro";

const projects = await getCollection("projects");

const coreProjects = projects.filter(project => project.data.type === "core");
const sideProjects = projects.filter(project => project.data.type === "side");
---

<PageLayout
  description="A showcase of AI-integrated tools, healthcare systems, and full-stack solutions built for impact."
  title="Projects Collection"
>
  <MaintenanceNotice 
    title="Projects Under Construction" 
    description="Curating a showcase of AI-integrated tools and full-stack applications. From healthcare referral systems to social graph intelligence." 
  />

